{
  "name": "@repo/iot",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./transport": {
      "types": "./dist/transport/index.d.ts",
      "default": "./dist/transport/index.js"
    },
    "./transport/web": {
      "types": "./dist/transport/web/index.d.ts",
      "default": "./dist/transport/web/index.js"
    },
    "./transport/react-native": {
      "types": "./dist/transport/react-native/index.d.ts",
      "default": "./dist/transport/react-native/index.js"
    },
    "./protocol": {
      "types": "./dist/protocol/index.d.ts",
      "default": "./dist/protocol/index.js"
    }
  },
  "private": true,
  "scripts": {
    "build": "tsc --build --verbose",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react-native-ble-plx": "^3.5.0",
    "react-native-bluetooth-classic": "^1.73.0-rc.13",
    "react-native-usb-serialport-for-android": "^0.5.0"
  },
  "peerDependenciesMeta": {
    "react-native-bluetooth-classic": {
      "optional": true
    },
    "react-native-ble-plx": {
      "optional": true
    },
    "react-native-usb-serialport-for-android": {
      "optional": true
    }
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:testing",
    "eslint": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:testing"
  }
}
