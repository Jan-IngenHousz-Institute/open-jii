{
  "name": "@repo/auth",
  "version": "0.0.1",
  "exports": {
    "./server": {
      "types": "./src/server.d.ts",
      "default": "./dist/server.js"
    },
    "./client": {
      "types": "./src/clients/client.web.d.ts",
      "default": "./dist/clients/client.web.js"
    },
    "./client.native": {
      "types": "./src/clients/client.native.d.ts",
      "default": "./dist/clients/client.native.js"
    },
    "./types": {
      "types": "./src/types.d.ts",
      "default": "./dist/types.js"
    }
  },
  "private": true,
  "scripts": {
    "build": "tsc --build --verbose",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@better-auth/expo": "^1.4.12",
    "@repo/database": "workspace:*",
    "@repo/transactional": "workspace:*",
    "better-auth": "^1.4.12",
    "nodemailer": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/express": "^5.0.1",
    "@types/node": "catalog:",
    "@types/nodemailer": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "expo-secure-store": "*"
  },
  "peerDependenciesMeta": {
    "expo-secure-store": {
      "optional": true
    }
  }
}
