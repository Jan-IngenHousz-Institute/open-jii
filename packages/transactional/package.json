{
  "name": "@repo/transactional",
  "version": "1.0.0",
  "private": true,
  "exports": {
    "./emails/verification-request": {
      "types": "./dist/emails/verification-request.d.ts",
      "default": "./dist/emails/verification-request.js"
    }
  },
  "scripts": {
    "build": "tsc --build --verbose",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch & email dev -p 3001 & sleep 1 && pnpm start:mailcatcher",
    "email:dev": "email dev -p 3001 & sleep 1 && pnpm start:mailcatcher",
    "export": "email export",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "start:mailcatcher": "docker compose -f docker-compose.yml up mailcatcher"
  },
  "dependencies": {
    "@react-email/components": "catalog:react-email",
    "qrcode": "^1.5.4",
    "react-email": "catalog:react-email"
  },
  "devDependencies": {
    "@react-email/preview-server": "4.1.3",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/qrcode": "^1.5.5",
    "@types/react": "catalog:react19",
    "eslint": "catalog:",
    "react": "catalog:react19",
    "typescript": "catalog:"
  }
}
