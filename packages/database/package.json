{
  "name": "@repo/database",
  "version": "1.0.0",
  "description": "",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "db:seed": "tsx scripts/seed.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:compose": "docker compose -f ./docker-compose.yml",
    "db:start": "pnpm db:compose up -d",
    "db:stop": "pnpm db:compose down",
    "db:logs": "pnpm db:compose logs -f",
    "db:restart": "pnpm run db:stop && pnpm run db:start",
    "db:setup": "pnpm db:start && pnpm run db:migrate",
    "db:teardown": "pnpm db:stop"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.41.0",
    "postgres": "^3.4.5",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.2",
    "drizzle-kit": "^0.30.6",
    "eslint": "catalog:",
    "tsx": "^4.19.3",
    "typescript": "catalog:"
  }
}
