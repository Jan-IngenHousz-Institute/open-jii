{
  "name": "@repo/database",
  "version": "1.0.0",
  "description": "",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./src/client.ts",
      "default": "./dist/client.js"
    },
    "./schema": {
      "types": "./src/schema.ts",
      "default": "./dist/schema.js"
    }
  },
  "scripts": {
    "build": "tsc --build --verbose",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --watch & pnpm db:studio",
    "lint": "eslint",
    "env:default": "dotenv -e .env.default --",
    "env:test": "dotenv -e .env.test --",
    "db:seed": "pnpm env:default tsx scripts/seed.ts",
    "db:reset": "pnpm env:default tsx scripts/reset.ts",
    "db:migrate": "pnpm env:default drizzle-kit migrate",
    "db:studio": "pnpm env:default drizzle-kit studio",
    "db:push": "pnpm env:default drizzle-kit push",
    "db:generate": "pnpm env:default drizzle-kit generate",
    "db:compose": "docker compose -f ./docker-compose.yml --env-file .env.default",
    "db:start": "pnpm db:compose up -d --wait",
    "db:stop": "pnpm db:compose down",
    "db:logs": "pnpm db:compose logs -f",
    "db:restart": "pnpm run db:stop && pnpm run db:start",
    "db:setup": "pnpm db:start && pnpm run db:reset && pnpm run db:migrate",
    "db:teardown": "pnpm db:stop",
    "db:test:compose": "docker compose -p database-test -f ./docker-compose.yml --env-file .env.test",
    "db:test:start": "pnpm db:test:compose up -d --wait",
    "db:test:stop": "pnpm db:test:compose down",
    "db:test:logs": "pnpm db:test:compose logs -f",
    "db:test:restart": "pnpm run db:test:stop && pnpm run db:test:start",
    "db:test:reset": "pnpm env:test tsx scripts/reset.ts",
    "db:test:migrate": "pnpm env:test drizzle-kit migrate",
    "db:test:setup": "pnpm db:test:start && pnpm run db:test:reset && pnpm run db:test:migrate",
    "db:test:teardown": "pnpm db:test:stop"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.41.0",
    "postgres": "^3.4.5",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.6",
    "eslint": "catalog:",
    "tsx": "^4.19.3",
    "typescript": "catalog:"
  }
}
