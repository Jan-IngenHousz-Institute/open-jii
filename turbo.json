{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "build/**", "dist/**"],
      "env": [
        "NODE_ENV",
        "AUTH_SECRET",
        "NEXT_RUNTIME",
        "CORS_ENABLED",
        "CORS_ORIGINS",
        "PORT",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "AUTH_EMAIL_SERVER",
        "AUTH_EMAIL_FROM",
        "DATABASE_URL",
        "DB_HOST",
        "DB_PORT",
        "DB_NAME",
        "DB_CREDENTIALS"
      ]
    },
    "lint": {
      "dependsOn": ["^build", "^lint"],
      "env": ["DATABASE_URL", "DB_HOST", "DB_PORT", "DB_NAME", "DB_CREDENTIALS"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "env": ["NEXT_PUBLIC_ENABLE_DEVTOOLS"],
      "cache": false,
      "persistent": true
    },
    "db:migrate": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "db:generate": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:setup": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "$TURBO_ROOT$/vitest.config.ts"],
      "outputs": ["coverage/**"],
      "env": [
        "DATABRICKS_WEBHOOK_API_KEY_ID",
        "DATABRICKS_WEBHOOK_SECRET",
        "DATABASE_URL",
        "DB_HOST",
        "DB_PORT",
        "DB_NAME",
        "DB_CREDENTIALS"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
