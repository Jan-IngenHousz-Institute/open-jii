{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "CONTENTFUL_SPACE_ID",
    "CONTENTFUL_ACCESS_TOKEN", 
    "CONTENTFUL_PREVIEW_ACCESS_TOKEN",
    "CONTENTFUL_PREVIEW_SECRET",
    "CONTENTFUL_SPACE_ENVIRONMENT"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "build/**", "dist/**"],
      "env": [
        "NODE_ENV",
        "AUTH_SECRET",
        "NEXT_RUNTIME",
        "CORS_ENABLED",
        "CORS_ORIGINS",
        "PORT",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "AUTH_EMAIL_SERVER",
        "AUTH_EMAIL_FROM",
        "DATABASE_URL",
        "DB_HOST",
        "DB_PORT",
        "DB_NAME",
        "DB_CREDENTIALS",
        "CONTENTFUL_SPACE_ID",
        "CONTENTFUL_ACCESS_TOKEN",
        "CONTENTFUL_PREVIEW_ACCESS_TOKEN",
        "CONTENTFUL_PREVIEW_SECRET",
        "CONTENTFUL_SPACE_ENVIRONMENT",
        "CONTENTFUL_GRAPHQL_ENDPOINT"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "DATABASE_URL",
        "DB_HOST",
        "DB_PORT",
        "DB_NAME",
        "DB_CREDENTIALS",
        "CONTENTFUL_SPACE_ID",
        "CONTENTFUL_ACCESS_TOKEN",
        "CONTENTFUL_PREVIEW_ACCESS_TOKEN",
        "CONTENTFUL_PREVIEW_SECRET",
        "CONTENTFUL_SPACE_ENVIRONMENT",
        "CONTENTFUL_GRAPHQL_ENDPOINT"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": [
        "CONTENTFUL_SPACE_ID",
        "CONTENTFUL_ACCESS_TOKEN",
        "CONTENTFUL_PREVIEW_ACCESS_TOKEN",
        "CONTENTFUL_PREVIEW_SECRET",
        "CONTENTFUL_SPACE_ENVIRONMENT"
      ]
    },
    "dev": {
      "env": [
        "NEXT_PUBLIC_ENABLE_DEVTOOLS",
        "CONTENTFUL_SPACE_ID",
        "CONTENTFUL_ACCESS_TOKEN",
        "CONTENTFUL_PREVIEW_ACCESS_TOKEN",
        "CONTENTFUL_PREVIEW_SECRET",
        "CONTENTFUL_SPACE_ENVIRONMENT"
      ],
      "cache": false,
      "persistent": true
    },
    "db:migrate": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "db:generate": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:setup": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"],
      "env": [
        "DATABRICKS_WEBHOOK_API_KEY_ID",
        "DATABRICKS_WEBHOOK_SECRET",
        "DATABASE_URL",
        "DB_HOST",
        "DB_PORT",
        "DB_NAME",
        "DB_CREDENTIALS"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
