{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["jest", "node"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "strict": true,
    "experimentalDecorators": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test", "jest.config.ts"]
}
