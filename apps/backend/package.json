{
  "name": "backend",
  "version": "0.0.1",
  "scripts": {
    "build": "nest build",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "typecheck": "tsc --noEmit",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint",
    "pretest": "cd ../../packages/database && pnpm run test:db:setup",
    "test": "pnpm run pretest && jest --runInBand --coverage && pnpm run posttest",
    "posttest": "cd ../../packages/database && pnpm run test:db:teardown",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.0",
    "@nestjs/platform-express": "^11.1.0",
    "@repo/api": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/validator": "workspace:*",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/nest": "^3.52.1",
    "http-status-codes": "^2.3.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.22",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "catalog:node22",
    "@types/supertest": "^6.0.3",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "prettier": "catalog:",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "catalog:"
  },
  "prettier": "@repo/prettier-config"
}
