{
  "name": "backend",
  "version": "0.0.1",
  "scripts": {
    "build": "nest build",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pretest": "cd ../../packages/database && pnpm run db:setup",
    "test": "pnpm run pretest && vitest run && pnpm run posttest",
    "test:watch": "pnpm run pretest && vitest --watch",
    "posttest": "cd ../../packages/database && pnpm run db:teardown",
    "docker:build": "cd ../.. && docker build -t openjii-backend -f apps/backend/Dockerfile .",
    "docker:run": "docker run -p 3020:3020 openjii-backend",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:prune": "docker system prune -f"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^11.1.0",
    "@nestjs/platform-express": "^11.1.0",
    "@repo/api": "workspace:*",
    "@repo/auth": "workspace:*",
    "@repo/database": "workspace:*",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/nest": "^3.52.1",
    "@types/busboy": "^1.5.4",
    "axios": "^1.9.0",
    "busboy": "^1.6.0",
    "cookie-parser": "^1.4.7",
    "drizzle-zod": "^0.5.1",
    "http-status-codes": "^2.3.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.24",
    "@total-typescript/shoehorn": "^0.1.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.1",
    "@types/nock": "^11.1.0",
    "@types/node": "catalog:",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "catalog:testing",
    "dotenv": "^16.5.0",
    "eslint": "catalog:",
    "globals": "^15.15.0",
    "nock": "^14.0.4",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "catalog:",
    "unplugin-swc": "^1.5.5",
    "vitest": "catalog:testing"
  }
}
