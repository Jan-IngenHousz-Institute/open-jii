{
  "name": "docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "docusaurus start -p 3010 --no-open",
    "build": "docusaurus build",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "openapi:generate": "cd ../../packages/api && pnpm tsc && node dist/openapi.js",
    "openapi:docs": "pnpm run openapi:generate && pnpm run openapi",
    "openapi": "pnpm run openapi:copy && pnpm run openapi:fmt",
    "openapi:copy": "mkdir -p static/api/rest && cp -R ../../packages/api/dist/openapi.json static/api/rest/openapi.json",
    "openapi:fmt": "prettier --write static/api/rest/openapi.json"
  },
  "dependencies": {
    "@docusaurus/core": "^3.9.2",
    "@docusaurus/preset-classic": "^3.9.2",
    "@mdx-js/react": "^3.1.1",
    "clsx": "^2.1.1",
    "js-yaml": "^4.1.1",
    "prism-react-renderer": "^2.4.1",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "swagger-ui-react": "^5.31.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^3.9.2",
    "@docusaurus/theme-mermaid": "^3.9.2",
    "@docusaurus/tsconfig": "^3.9.2",
    "@docusaurus/types": "^3.9.2",
    "@types/js-yaml": "^4.0.9",
    "@types/swagger-ui-react": "^5.18.0",
    "typescript": "catalog:"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=22.0"
  }
}
