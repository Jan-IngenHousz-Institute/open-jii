                  "name": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100,
                    "description": "The name of the experiment"
                  },
                  "description": {
                    "type": "string",
                    "description": "Optional description of the experiment"
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "provisioning",
                      "provisioning_failed",
                      "active",
                      "stale",
                      "archived",
                      "published"
                    ],
                    "description": "Initial status of the experiment"
                  },
                  "visibility": {
                    "type": "string",
                    "enum": [
                      "private",
                      "public"
                    ],
                    "description": "Experiment visibility setting"
                  },
                  "embargoIntervalDays": {
                    "type": "integer",
                    "description": "Embargo period in days"
                  }
                },
                "required": [
                  "name"
                ]
              }
            }
          }
